<Window x:Class="CommandDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="F to C" Height="350" Width="525">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Enter degree in Fahrenheit" />
            <TextBox Text="{Binding Degree.Fahrenheit, Mode=TwoWay}"
                     Width="200" HorizontalAlignment="Left"/>
            
            <Button Content="Convert to C" Width="100"
                    Margin="5" HorizontalAlignment="Left"
                    Command="{Binding ToCelciusCommand}"/>
            
            <!--Result-->
            <Label Content="{Binding Degree.Celcius}"  />
        </StackPanel>
    </Grid>
</Window>
