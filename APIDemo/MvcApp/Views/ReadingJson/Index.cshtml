@model MvcApp.Models.JsonObject.Rootobject

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Today's reading: @Html.Raw(@Model.response.search.result.passages[0].display)</h4>
        <hr />

        <div>
            @Html.Raw(@Model.response.search.result.passages[0].text)
            @Html.Raw(@Model.response.search.result.passages[0].copyright)
        </div>
        <div>

        </div>
        

     </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
